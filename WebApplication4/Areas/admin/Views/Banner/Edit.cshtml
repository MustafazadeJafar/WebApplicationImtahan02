@model BannerEditVM
@{
    ViewData["Title"] = "Edit Banner";
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" placeholder="@Model.Title">
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Describtion">Describtion</label>
        <input asp-for="Describtion" placeholder="@Model.Describtion">
        <span asp-validation-for="Describtion"></span>
    </div>
    <div class="form-group">
        <label asp-for="FrontImageFile">Front image</label>
        <input asp-for="FrontImageFile">
        <span asp-validation-for="FrontImageFile"></span>
    </div>
    <div class="form-group">
        <label asp-for="BackImageFile">Back image</label>
        <input asp-for="BackImageFile">
        <span asp-validation-for="BackImageFile"></span>
    </div>
    <button type="submit">Submit</button>
</form>

